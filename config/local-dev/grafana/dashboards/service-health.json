{
  "id": null,
  "title": "Service Health",
  "tags": ["health", "local-dev"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Spring Boot - UP",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "up{job=\"spring-app\"}", "refId": "A" }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Kafka - UP",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "up{job=\"kafka-exporter\"}", "refId": "A" }
      ],
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Prometheus - UP",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "up{job=\"prometheus\"}", "refId": "A" }
      ],
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 3 }
    },
    {
      "type": "stat",
      "title": "Loki - UP",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "up{job=\"loki\"}", "refId": "A" }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 3 }
    },
    {
      "type": "graph",
      "title": "HTTP Request Rate",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "rate(http_server_requests_seconds_count[1m])", "refId": "A" }
      ],
      "gridPos": { "x": 0, "y": 3, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "JVM Memory Used",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "jvm_memory_used_bytes", "refId": "A" }
      ],
      "gridPos": { "x": 12, "y": 3, "w": 12, "h": 6 }
    },
    {
      "type": "graph",
      "title": "Kafka Consumer Lag",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "kafka_consumergroup_lag", "refId": "A" }
      ],
      "gridPos": { "x": 0, "y": 9, "w": 24, "h": 6 }
    }
  ]
}
